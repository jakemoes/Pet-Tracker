<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAppointment">

    <!--Heading-->
    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temin hinzufÃ¼gen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:textSize="40sp"
        android:textStyle="bold"
        />

    <!--Drop Down Kind of Animal-->


    <!--Titel-->
    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingHorizontal="25dp"
        android:hint="Titel"
        android:paddingStart="25dp"
        android:background="@drawable/input_field"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="15dp"
        />


    <!--Date-->
    <EditText
        android:id="@+id/et_datum"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:paddingHorizontal="25dp"
        android:hint="Datum"
        android:paddingStart="25dp"
        android:background="@drawable/input_field"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/et_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chooseDate"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:text="-"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:iconSize="40dp"
        app:cornerRadius="15dp"
        app:icon="@drawable/calender"
        app:iconGravity="textTop"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        app:strokeColor="@color/main"
        android:backgroundTint="@color/main"
        android:layout_marginRight="15dp"/>

    <!--Remember me-->
    <EditText
        android:id="@+id/et_remember"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:paddingHorizontal="25dp"
        android:hint="Remember me on"
        android:paddingStart="25dp"
        android:background="@drawable/input_field"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/et_datum"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/chooseRememberDate"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="-"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:iconSize="40dp"
        app:cornerRadius="15dp"
        app:icon="@drawable/calender"
        app:iconGravity="textTop"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_datum"
        app:strokeColor="@color/main"
        android:backgroundTint="@color/main"
        android:layout_marginRight="15dp"/>
    <!--Note-->
    <EditText
        android:id="@+id/et_Note"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/input_field"
        android:hint="Note"
        android:gravity="top|start"
        android:paddingHorizontal="25dp"
        android:paddingStart="25dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/et_remember"
        tools:layout_editor_absoluteX="15dp" />

    <!--Save Button-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintTop_toBottomOf="@id/et_Note"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:text="Save"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:iconSize="40dp"
        app:cornerRadius="15dp"
        app:strokeColor="@color/main"
        android:backgroundTint="@color/main"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_btn_cancel"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintTop_toBottomOf="@id/et_Note"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:text="cancel"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:iconSize="40dp"
        app:cornerRadius="15dp"
        app:strokeColor="@color/main"
        android:backgroundTint="@color/main"/>



</androidx.constraintlayout.widget.ConstraintLayout>