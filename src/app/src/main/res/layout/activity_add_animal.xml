<?xml version="1.0" encoding="utf-8"?>
<!--Authors: Jakob Mösenbacher, Franziska Kaßler-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAnimal">

    <!--Heading-->
    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tier hinzufügen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_goneMarginTop="20dp"
        />

    <!--CatName-->
    <EditText
        android:id="@+id/pt_catName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingHorizontal="25dp"
        android:hint="Name"
        android:paddingStart="25dp"
        android:background="@drawable/input_field"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="15dp"
        />

    <!--Drop Down Emoji-->
    <Spinner
        android:id="@+id/sd_emoji"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/input_field"
        android:paddingHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/pt_catName"
        />

    <!--Age-->
    <EditText
        android:id="@+id/pt_catAge"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingHorizontal="25dp"
        android:hint="Alter"
        android:paddingStart="25dp"
        android:background="@drawable/input_field"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/sd_emoji"
        android:layout_margin="15dp"
        />

    <!--Drop Down Kind of Animal-->
    <Spinner
        android:id="@+id/sd_Animal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/input_field"
        android:paddingHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/pt_catAge"
        />


    <!--Save Button-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:text="Save"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:iconSize="40dp"
        app:cornerRadius="15dp"
        app:strokeColor="@color/main"
        android:backgroundTint="@color/main"/>

    <!--Cancel Button-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_btn_cancel"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:text="Cancel"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:iconSize="40dp"
        app:cornerRadius="15dp"
        app:strokeColor="@color/main"
        android:backgroundTint="@color/main"/>


</androidx.constraintlayout.widget.ConstraintLayout>